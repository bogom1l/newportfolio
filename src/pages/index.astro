---
import BaseLayout from "../layouts/BaseLayout.astro";
import { homeContent } from "../data/homeContent.ts";
---

<BaseLayout>
  <section class="min-h-screen flex flex-col items-center justify-center text-center bg-gradient-to-br from-blue-900 via-blue-700 to-blue-500 px-6 relative overflow-hidden">

    <!-- Dark blue overlay on the background only -->
    <div class="absolute inset-0 bg-blue-900 opacity-30 z-0"></div>

    <div class="max-w-3xl relative z-10">

      <!-- White box with transparent background color -->
      <div class="md:w-full bg-white/70 p-20 rounded-lg shadow-lg relative z-10">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-800 leading-tight animate-fade-in">
          {homeContent.title}
        </h1>

        <p class="mt-6 text-lg md:text-xl text-gray-700 leading-relaxed animate-slide-up">
          {homeContent.description}
        </p>

        <a href="/contact" class="mt-8 inline-block px-6 py-3 bg-white text-blue-600 font-semibold rounded-lg shadow-lg transition-all transform hover:scale-105 hover:shadow-xl animate-fade-in">
          {homeContent.buttonText}
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
