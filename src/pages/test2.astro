---

import BaseLayout from '../layouts/BaseLayout.astro';

const currentYear = new Date().getFullYear();

---

<BaseLayout>
    
    <header class="p-6 bg-white shadow-md">
      <div class="container mx-auto flex justify-between items-center">
        <h1 class="text-2xl font-bold text-gray-800">My Portfolio</h1>

          <ul class="flex space-x-6 text-gray-700">
            <li><a href="/" class="hover:text-blue-500">Home</a></li>
            <li><a href="/about" class="hover:text-blue-500">About</a></li>
            <li><a href="/projects" class="hover:text-blue-500">Projects</a></li>
            <li><a href="/contact" class="hover:text-blue-500">Contact</a></li>
          </ul>
      
      </div>


    <main class="container mx-auto p-8 grid grid-cols-12 gap-6">
      <!-- Sidebar -->
      <aside class="col-span-4 bg-white p-6 rounded-lg shadow-md">
        <img src="/profile.jpg" alt="Profile" class="w-full rounded-md mb-4" />
        <h2 class="text-xl font-semibold">Your Name</h2>
        <p class="text-gray-600">Your Title</p>
        <p class="mt-4 text-sm text-gray-500">Short bio or description.</p>
        <ul class="mt-4 space-y-2">
          <li><a href="#" class="text-blue-500 hover:underline">LinkedIn</a></li>
          <li><a href="#" class="text-blue-500 hover:underline">GitHub</a></li>
        </ul>
      </aside>

      <!-- Main Content -->
      <section class="col-span-8 bg-white p-6 rounded-lg shadow-md">
        <slot />
      </section>
    </main>




</BaseLayout>